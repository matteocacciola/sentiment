{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "allowJs": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist/",
    "rootDir": "./src/",
    "strict": true,
    "alwaysStrict": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": false,
    "skipLibCheck": true,
    "types": ["node"]
  },
  "include": ["./src/**/*", "./data/*"],
}
